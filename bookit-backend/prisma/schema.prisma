generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
 
}


model Experience {
  id          String        @id @default(uuid())
  title       String
  location    String
  description String
  image       String
  price       Int
  tax         Float
  createdAt   DateTime      @default(now())
  bookings  Booking[] 
  dates       ExperienceDate[]
}

model ExperienceDate {
  id            String          @id @default(uuid())
  date          DateTime
  experienceId  String
  experience    Experience      @relation(fields: [experienceId], references: [id])
  bookings     Booking[] 
  times         ExperienceTime[]
}

model ExperienceTime {
  id           String         @id @default(uuid())
  time         String
  dateId       String
  date         ExperienceDate @relation(fields: [dateId], references: [id])
  bookings     Booking[] 
  slots        ExperienceSlot[]
}

model ExperienceSlot {
  id         String         @id @default(uuid())
  timeId     String
  time       ExperienceTime @relation(fields: [timeId], references: [id])
}

model Booking {
  id         String   @id @default(uuid())

 
  experience   Experience       @relation(fields: [experienceId], references: [id])
  experienceId String

  date         ExperienceDate   @relation(fields: [dateId], references: [id])
  dateId       String

  time         ExperienceTime   @relation(fields: [timeId], references: [id])
  timeId       String

  userName   String
  userEmail  String
  quantity   Int
  promoCode  String? 
  totalPrice Int
  createdAt  DateTime @default(now())

 
}