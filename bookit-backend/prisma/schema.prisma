generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experience {
  id          String   @id @default(uuid())
  title       String
  location String
  description String
  image       String
  price       Int        // in cents
  createdAt   DateTime   @default(now())
  slots       Slot[]
}

model Slot {
  id           String      @id @default(uuid())
  experience   Experience  @relation(fields: [experienceId], references: [id])
  experienceId String
  date         DateTime    // Only the date
  time         String      // "HH:mm" format
  capacity     Int         // available seats
  bookings     Booking[]

  @@unique([experienceId, date, time]) // one slot per experience/date/time
  @@index([experienceId, date])
}

model Booking {
  id         String   @id @default(uuid())
  slot       Slot     @relation(fields: [slotId], references: [id])
  slotId     String
  userName   String
  userEmail  String
  quantity   Int
  promoCode  String? 
  totalPrice Int
  createdAt  DateTime @default(now())

  @@index([slotId])
}
