generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Experience {
  id          String        @id @default(uuid())
  title       String
  location    String
  description String
  image       String
  price       Int
  tax         Float
  createdAt   DateTime      @default(now())

  dates       ExperienceDate[]
}

model ExperienceDate {
  id            String          @id @default(uuid())
  date          DateTime
  experienceId  String
  experience    Experience      @relation(fields: [experienceId], references: [id])

  times         ExperienceTime[]
}

model ExperienceTime {
  id           String         @id @default(uuid())
  time         String
  dateId       String
  date         ExperienceDate @relation(fields: [dateId], references: [id])

  slots        ExperienceSlot[]
}

model ExperienceSlot {
  id         String         @id @default(uuid())
  capacity   Int
  timeId     String
  time       ExperienceTime @relation(fields: [timeId], references: [id])
   bookings Booking[]  
}

model Booking {
  id         String   @id @default(uuid())
  slot       ExperienceSlot     @relation(fields: [slotId], references: [id])
  slotId     String
  userName   String
  userEmail  String
  quantity   Int
  promoCode  String? 
  totalPrice Int
  createdAt  DateTime @default(now())

  @@index([slotId])
}